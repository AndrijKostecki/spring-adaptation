<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="writer" class="writer.Writer"/>
    <bean id="ozdobnikGwiazdki" class="writer.OzdobnikGwiazdka"/>
    <bean id="ozdobnikMinus" class="writer.OzdobnikMinus"/>

    <bean id="nicewriter" class="writer.NiceWriter">
        <property name="ozdobnik" ref="ozdobnikMinus"/>
    </bean>



    <bean id="test" class="test.Test">
        <property name="writer" ref="nicewriter"/>
        <property name="myName" value="Anita"/>
    </bean>


</beans>